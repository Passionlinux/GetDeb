#!/bin/sh

set -e

if [ "$1" = "configure" ]; then

    # We should have a symlink, instead of a doc dir,
    # but dpkg will not replace one for the other, so we
    # do it by hand.
    # Closes: #521047.
    DOCDIR=/usr/share/doc/liferea-dbg
    if [ -d $DOCDIR -a ! -h $DOCDIR ] ; then
        rmdir $DOCDIR
        ln -s liferea-data $DOCDIR
    fi

fi

#DEBHELPER#

exit 0
