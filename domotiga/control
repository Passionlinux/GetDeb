Depends: ${shlibs:Depends}, ${misc:Depends}, gambas2-runtime,
 gambas2-gb-qt, gambas2-gb-form, gambas2-gb-db, gambas2-gb-db-form,
 gambas2-gb-db-mysql, gambas2-gb-desktop, gambas2-gb-form-dialog,
 gambas2-gb-form-mdi, gambas2-gb-net, gambas2-gb-net-curl,
