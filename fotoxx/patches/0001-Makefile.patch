---
 fotoxx-9.0/Makefile |    7 +++----
 1 files changed, 3 insertions(+), 4 deletions(-)

Index: fotoxx-14.03/Makefile
===================================================================
--- fotoxx-14.03.orig/Makefile	2014-03-01 14:16:00.648343244 +0100
+++ fotoxx-14.03/Makefile	2014-03-01 15:46:31.440296878 +0100
@@ -14,7 +14,7 @@
 DATADIR = $(SHAREDIR)/data
 ICONDIR = $(SHAREDIR)/icons
 LOCALESDIR = $(SHAREDIR)/locales
-DOCDIR = $(PREFIX)/share/doc/fotoxx
+DOCDIR = $(PREFIX)/share/doc/fotoxx/extras
 MANDIR = $(PREFIX)/share/man/man1
 MENUFILE = $(PREFIX)/share/applications/fotoxx.desktop
 APPDATADIR = $(PREFIX)/share/appdata
@@ -78,7 +78,6 @@
 	rm -f -R  $(DESTDIR)$(SHAREDIR)
 	rm -f -R  $(DESTDIR)$(DOCDIR)
 	rm -f  $(DESTDIR)$(MANDIR)/fotoxx.1.gz
-	xdg-desktop-menu uninstall $(DESTDIR)$(MENUFILE)
 	rm -f  $(DESTDIR)$(MENUFILE)
 	mkdir -p  $(DESTDIR)$(BINDIR)
 	mkdir -p  $(DESTDIR)$(DATADIR)
@@ -100,16 +99,12 @@
 	rm -f fotoxx.1.gz
 	# menu (desktop) file
 	cp -f desktop $(DESTDIR)$(MENUFILE)
-	xdg-desktop-menu install --novendor $(DESTDIR)$(MENUFILE)
-	# appdata xml file
-	cp -f appdata/*.xml $(DESTDIR)$(APPDATADIR)
 
 uninstall:
 	rm -f  $(DESTDIR)$(BINDIR)/fotoxx
 	rm -f -R  $(DESTDIR)$(SHAREDIR)
 	rm -f -R  $(DESTDIR)$(DOCDIR)
 	rm -f  $(DESTDIR)$(MANDIR)/fotoxx.1.gz
-	xdg-desktop-menu uninstall $(DESTDIR)$(MENUFILE)
 	rm -f  $(DESTDIR)$(MENUFILE)
 
 clean: 
