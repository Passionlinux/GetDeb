#!/usr/bin/make -f
%:
	dh $@

override_dh_auto_clean:
	rm -rf XnView XnViewMP converted_icons

override_dh_auto_build:
ifeq ($(DEB_BUILD_ARCH), amd64)
	tar xzf XnViewMP-linux-x64.tgz
else
	tar xzf XnViewMP-linux.tgz
endif
	# find . -iname  "*.so.*" | sed "s,./,chrpath -d ,"
	chrpath -d XnView/lib/libicudata.so.53
	chrpath -d XnView/lib/libQt5Gui.so.5
	chrpath -d XnView/lib/libQt5MultimediaWidgets.so.5.4.2
	chrpath -d XnView/lib/libQt5Multimedia.so.5
	chrpath -d XnView/lib/libicuio.so.53.1
	chrpath -d XnView/lib/libicule.so.53.1
	chrpath -d XnView/lib/libQt5X11Extras.so.5
	chrpath -d XnView/lib/libQt5Core.so.5
	chrpath -d XnView/lib/libQt5Concurrent.so.5
	chrpath -d XnView/lib/libicuuc.so.53
	chrpath -d XnView/lib/libicuio.so.53
	chrpath -d XnView/lib/libiculx.so.53.1
	chrpath -d XnView/lib/libicui18n.so.53.1
	chrpath -d XnView/lib/libQt5Positioning.so.5.4.2
	chrpath -d XnView/lib/libQt5WebKit.so.5.4.2
	chrpath -d XnView/lib/libQt5Sensors.so.5
	chrpath -d XnView/lib/libQt5WebChannel.so.5.4.2
	chrpath -d XnView/lib/libQt5PrintSupport.so.5
	chrpath -d XnView/lib/libicuuc.so.53.1
	chrpath -d XnView/lib/libQt5MultimediaWidgets.so.5
	chrpath -d XnView/lib/libQt5Widgets.so.5
	chrpath -d XnView/lib/libQt5PrintSupport.so.5.4.2
	chrpath -d XnView/lib/libQt5WebKitWidgets.so.5
	chrpath -d XnView/lib/libQt5X11Extras.so.5.4.2
	chrpath -d XnView/lib/libQt5Concurrent.so.5.4.2
	chrpath -d XnView/lib/libiculx.so.53
	chrpath -d XnView/lib/libicui18n.so.53
	chrpath -d XnView/lib/libQt5DBus.so.5.4.2
	chrpath -d XnView/lib/libQt5WebChannel.so.5
	chrpath -d XnView/lib/libQt5Widgets.so.5.4.2
	chrpath -d XnView/lib/libQt5WebKitWidgets.so.5.4.2
	chrpath -d XnView/lib/libQt5Network.so.5
	chrpath -d XnView/lib/libQt5Xml.so.5.4.2
	chrpath -d XnView/lib/libQt5Multimedia.so.5.4.2
