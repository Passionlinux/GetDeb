	chrpath -d XnView/lib/libQt5Svg.so.5.4.2
	chrpath -d XnView/lib/libQt5Svg.so.5
	chrpath -d XnView/lib/libQt5Qml.so.5.4.2
	chrpath -d XnView/lib/libQt5Core.so.5.4.2
	chrpath -d XnView/lib/libQt5Quick.so.5
	chrpath -d XnView/lib/libicutu.so.53
	# find . -iname  "*.so" | sed "s,./,chrpath -d ,"
	chrpath -d XnView/lib/printsupport/libcupsprintersupport.so
