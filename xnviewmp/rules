	chrpath -d XnView/lib/libicutest.so.53.1
	chrpath -d XnView/lib/libicule.so.53
	chrpath -d XnView/lib/libQt5Positioning.so.5
	chrpath -d XnView/lib/libQt5WebKit.so.5
	chrpath -d XnView/lib/libQt5OpenGL.so.5
	chrpath -d XnView/lib/libQt5Qml.so.5
